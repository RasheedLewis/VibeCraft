# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info

# Database
# For local development, use PostgreSQL (recommended to match production):
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/ai_music_video
# For production (Railway), use PostgreSQL (Railway provides this automatically):
# DATABASE_URL=postgresql://user:password@host:port/dbname

# Redis
# For local development:
REDIS_URL=redis://localhost:6379/0
# For production (Railway), Railway provides this automatically:
# REDIS_URL=redis://host:port/0

# RQ Worker Queue
RQ_WORKER_QUEUE=ai_music_video

# AWS S3 Configuration
# Leave S3_ENDPOINT_URL empty for AWS S3 (or set for custom S3-compatible storage)
S3_ENDPOINT_URL=
S3_BUCKET_NAME=your-bucket-name
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_REGION=us-east-1

# External API Keys
REPLICATE_API_TOKEN=your-replicate-api-token
# Optional: Whisper API token (if using external Whisper service)
WHISPER_API_TOKEN=
# Optional: Lyrics API key (if using lyrics service)
LYRICS_API_KEY=

# System Dependencies
FFMPEG_BIN=ffmpeg
LIBROSA_CACHE_DIR=.cache/librosa
