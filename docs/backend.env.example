# FastAPI service
API_HOST=0.0.0.0
API_PORT=8000
API_LOG_LEVEL=info

# Database (Postgres)
# Note: Use 127.0.0.1 instead of localhost if you experience connection issues with psycopg3
DATABASE_URL=postgresql+psycopg://postgres:postgres@127.0.0.1:5432/ai_music_video

# Redis / Queue
REDIS_URL=redis://localhost:6379/0
RQ_WORKER_QUEUE=ai_music_video

# Object storage (S3-compatible)
S3_ENDPOINT_URL=
S3_BUCKET_NAME=ai-music-video
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=

# External services
REPLICATE_API_TOKEN=
WHISPER_API_TOKEN=
LYRICS_API_KEY=

# Media processing
FFMPEG_BIN=ffmpeg
LIBROSA_CACHE_DIR=.cache/librosa

